import sys
import time 
#The import functions allows you to access certain modules. In this case, it is necessary for the type command.
def type(string):
#I will define def command down below.
    for char in string:
        time.sleep(0.03)
        sys.stdout.write(char)
        sys.stdout.flush()




wood = 0
